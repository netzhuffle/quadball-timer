{
  "name": "quadball-timer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "cd dist && NODE_ENV=production bun index.js",
    "build": "bun run build.ts",
    "test": "bun test",
    "format": "bunx --bun oxfmt \"**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "format:check": "bunx --bun oxfmt \"**/*.{js,jsx,ts,tsx,mjs,cjs}\" --check",
    "lint": "bunx --bun oxlint --type-aware --type-check",
    "check": "bun run format:check && bun run lint"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "happy-dom": "^20.6.3",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.4.0"
  }
}
